<UserControl x:Class="DynaMaya.Nodes.NodeUI.OptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynaMaya.Nodes.NodeUI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" Height="150" Width="120">



    <Grid Margin="0,10" ZIndex="999">

        <Line Stroke="Orange" Height="2" Margin="6,34,26.6,74.4"  />
        <ComboBox x:Name="SpaceSelect" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top" Width="112" SelectedIndex="0" SelectedValue="{Binding mSpace, Mode=TwoWay}" SelectedValuePath="Tag" >
            <ComboBoxItem Content="World" Tag="kWorld"/>
            <ComboBoxItem Content="Object" Tag="kObject"/>
            <ComboBoxItem Content="PostTransform" Tag="kPostTransform"/>
        </ComboBox>
        <Label x:Name="label1_Copy" Content="Maya CS Space" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Height="28" Margin="0,34,0,0"/>
        <CheckBox x:Name="cb_LiveUpdate" Content="Live Update" HorizontalAlignment="Left" Margin="0,92,0,0" VerticalAlignment="Top" IsChecked="{Binding liveUpdate, Mode=TwoWay}"/>



    </Grid>
</UserControl>
